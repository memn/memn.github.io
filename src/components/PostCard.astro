---
interface Props {
    url: string;
    title: string;
    description: string;
    date: string;
}

const { url, date, title, description } = Astro.props;
---

<li class="card">
    <a class="card__link" href={url}>
        <h3 class="card__title">
            {title}
        </h3>
        <p class="card__subtitle">
            {date}
        </p>
        <p class="card__txt">
            {description}
        </p>
    </a>
</li>
